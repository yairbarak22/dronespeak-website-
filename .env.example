# Database Configuration
DB_URL=mongodb://localhost:27017/drone_db
# or for cloud MongoDB:
# DB_URL=mongodb+srv://username:password@cluster.mongodb.net/drone_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications and password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, set to your frontend domain:
# CORS_ORIGIN=https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production

# API Keys (if needed for external services)
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# WEATHER_API_KEY=your_weather_api_key

# Logging Level
LOG_LEVEL=info
# Options: error, warn, info, debug

# Security
BCRYPT_SALT_ROUNDS=12